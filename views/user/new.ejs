<div class="container" style="margin-top: 100px;">
    <div class="jumbotron">
        <form action="/user/create" method="post" class="form-signin">
            <h2 class="form-signin-heading">Nuevo Usuario</h2>
            <% if(flash.err){ %>
                <ul class="alert alert-success">
            <% Object.keys(flash.err).forEach(function(error){ %>
                <li><%- JSON.stringify(flash.err[error]) %></li>
            <% }) %>
                </ul>
            <% } %>
            <div class="control-group">
                <input type="text" class="form-control" placeholder="Nombre" name="username"/>
            </div>
            <div class="control-group">
                <input type="text" class="form-control" placeholder="Email" name="userEmail"/>
            </div>
            <div class="control-group">
                <input type="text" class="form-control" placeholder="Clave" name="userPassword"/>
            </div>
            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Create Account"/>
            <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
        </form>
    </div>
</div>
